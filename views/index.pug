extends layout

block content
  h1= title
  p Welcome to the #{title}

  form(action='/xml', method='GET')
    p
      input(type='hidden', name='accountCount', value='1')
      | Container Type:
      select(name='account1ContainerType')
        option(value='bank') Bank
        option(value='investment') Investment
      br
      | Account Type:
      select(name='account1AccountType')
        option(value='checking') Checking
        option(value='savings') Savings
      br
      | Currency Code:
      select(name='account1CurrencyCode')
        option(value='USD') USD
      br
      | Account Name:
      input(type='text', name='account1Name', value='')
      br
      | Account Holder:
      input(type='text', name='account1Holder', value='')
      br
      | Account Number:
      input(type='text', name='account1Number', value='')
      br
      | Current Balance:
      input(type='text', name='account1CurrentBalance', value='')
      br
      | Available Balance:
      input(type='text', name='account1AvailableBalance', value='')
      br
      | Transaction Count:
      input(type='text', name='account1TransactionCount', value='')
    input(type='submit', value='Submit')
